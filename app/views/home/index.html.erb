              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row full-width sub-bar">
        <!--Slogan-->
        <div class="row centered" style="margin-top:15px;">

          <div class="columns large-5">
            <div class="row">
              <div class="columns large-5 small-5">
                <div>
                <%= link_to t('pages.home.index.try_it'), proposals_path, :class => "homepageButton" %>
                </div>
              </div>

              <div class="columns large-7 small-7">
                <%= link_to t('pages.home.index.register'), new_user_registration_path, :class => "homepageButton", :id => 'signup' %>
              </div>

            </div>
          </div>
          <div class="columns large-7">
            <%= form_for(resource, :as => resource_name, :url => {:action => "create", :controller => "devise/sessions"}) do |f| %>
