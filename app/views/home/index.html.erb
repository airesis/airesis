              <br/>
              <%= link_to (image_tag 'flags/es-ES.png') + ' Spain', SysLocale.find_by_key('es-ES').url %>
              <br/>
              <%= link_to (image_tag 'flags/es-EC.png') + ' Ecuador', SysLocale.find_by_key('es-EC').url %>
              <br/>
              <%= link_to (image_tag 'flags/fr.png') + ' France', SysLocale.find_by_key('fr').url %>
              <br/>
              <%= link_to (image_tag 'flags/de.png') + ' Germany', SysLocale.find_by_key('de').url %>
              <br/>
              <%= link_to (image_tag 'flags/ro-RO.png') + ' România', SysLocale.find_by_key('ro-RO').url %>
              <br/>
