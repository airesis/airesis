      <div class="row full-width medium-bar"><!-- Menù navigatore-->
        <div class="row centered" style="margin-top: 10px">
          <!-- Logo principale-->
          <%= image_tag 'logo_main.png', :style => 'float:left;', :alt => "Airesis - Scegli di partecipare" %>

