    <body>

    <script type="text/javascript">
        window.___gcfg = {
            lang: 'it'
        };
        (function () {
            var po = document.createElement("script");
            po.type = "text/javascript";
            po.async = true;
            po.src = "https://apis.google.com/js/plusone.js";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(po, s);
        })();

        ( function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {
                return;
            }
            js = d.createElement(s);
            js.id = id;
            js.src = "//connect.facebook.net/<%="#{I18n.locale.to_s.gsub('-','_')}"%>/all.js#xfbml=1&appId=221145254619152";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        !function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (!d.getElementById(id)) {
                js = d.createElement(s);
                js.id = id;
                js.src = "//platform.twitter.com/widgets.js";
                fjs.parentNode.insertBefore(js, fjs);
            }
        }(document, "script", "twitter-wjs");

        //google analytics
        <%if Rails.env == 'production'%>
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-34897773-1']);
        _gaq.push(['_trackPageview']);
        _gaq.push(['_setDomainName', '<%= request.domain %>']);

        (function () {
            var ga = document.createElement('script');
            ga.type = 'text/javascript';
            ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(ga, s);
        })();
        <%end%>


        $(function () {

            $('.cur.language').qtip({
                content: $('#language'),
                position: {
                    at: 'bottom center',
                    my: 'top right',
                    viewport: $(window),
                    effect: false,
                    adjust: {
                        method: 'shift',
                        x: 0, y: 0
                    }
                },
                style: {
                    classes: 'qtip-light qtip-shadow qtip-cur'
                },
                show: {
                    event: 'click',
                    solo: true
                },
                hide: {
                    event: 'click -unfocus',
                    fixed: true,
                    delay: 500
                }
            });

        })


    </script>
    <div id="fb-root"></div>

    <div id="great_container">

      <div class="row full-width top-bar"><!-- Menù navigatore-->
        <div class="row centered">

          <ul class="navbar" style="float: left; margin-left: 5px;">
            <li><%= link_to t('pages.home.index.whatis'), edemocracy_path %></li>
            <li class="vertical-divider"></li>
            <li><%= link_to t('pages.home.index.partecipate'), partecipa_path %></li>
            <li class="vertical-divider"></li>
