<%= t('mailer.invite.hi_user') %><br/>
<%=raw t('mailer.invite.invitation', {user: @group_invitation.inviter.fullname, group: (link_to @group.name, group_url(@group)), app_name: (link_to ENV['APP_LONG_NAME'], Maktoub.home_domain)}) %><br />
<%if @group_invitation.testo %>
<%= t('mailer.invite.message_intro') %><br/>
    <p style="font-style: italic;">
      <%=h @group_invitation.testo%>
    </p>
<%end%>

<%= t('mailer.invite.accept_or_reject') %> <br />
<%= t('mailer.invite.no_more', {app_name: ENV['APP_SHORT_NAME']}) %> <br/>

<%= link_to t('mailer.invite.accept'), accept_group_invitations_url(group_id: @group.id, token: @group_invitation.token, email: @group_invitation_email.email), style: 'text-decoration: none;
        text-shadow: 0 1px rgba(0, 0, 0, 0.1);font: bold 11px Arial, sans-serif;color: #444;
        line-height: 17px;
        display: inline-block;
        margin: 5px;
        padding: 8px 14px;
        background: #F3F3F3;
        border: solid 1px #D9D9D9;
        border-radius: 2px;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        -webkit-transition: border-color .20s;
        -moz-transition: border-color .20s;
        -o-transition: border-color .20s;
        transition: border-color .20s;
        cursor: pointer;
        position: relative;' %> |
<%= link_to t('mailer.invite.reject'), reject_group_invitations_url(group_id: @group.id, token: @group_invitation.token, email: @group_invitation_email.email), style: 'text-decoration: none;
        text-shadow: 0 1px rgba(0, 0, 0, 0.1);font: bold 11px Arial, sans-serif;color: #444;line-height: 17px;display: inline-block;margin: 5px;padding: 8px 14px;background: #F3F3F3;
        border: solid 1px #D9D9D9;
        border-radius: 2px;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        -webkit-transition: border-color .20s;
        -moz-transition: border-color .20s;
        -o-transition: border-color .20s;
        transition: border-color .20s;
        cursor: pointer;
        position: relative;' %> <br />
<br />
<%= t('mailer.invite.greetings') %><br />
<%= link_to t('mailer.invite.no_more_button'), anymore_group_invitations_url(group_id: @group.id, token: @group_invitation.token, email: @group_invitation_email.email), :style=> "font-size: 10px;" %>
