<div class="groupListContainer shadow-box">
  <div class="groupUserImage">
    <%= link_to (group.group_image_tag 120), group_url(group), title: group.name %>
  </div>
  <div class="groupName">
    <h3>
      <%= link_to group.name, group_url(group), title: group.name %>
      <div class="title_fade"></div>
    </h3>

    <div class="group_tag_desc">
      <%= raw(group.description) %>
      <div class="fade_out"></div>
    </div>


    <div class="group_bottom">
      <div class="groupDescription" style="float:left">
        <%= image_tag 'group_partecipants.png', title: t('pages.groups.index.partecipants_number') %>
        <span class="count"><%= group.partecipants.count %></span>
      </div>
      <div class="groupDescription" style="float:left">
        <%=link_to (image_tag 'group_proposals.png'), group_proposals_url(group), title: t('pages.groups.index.proposals_number') %>
        <span class="count"><%= group.internal_proposals.count %></span>
      </div>
      <div class="groupDescription" style="float:left">
        <%=link_to (image_tag 'group_events.png'), group_events_url(group), title: t('pages.groups.index.events_number') %>
        <span class="count"><%= group.events.count %></span>
      </div>
      <div class="territoryDescription" style="float:left">
        <%=link_to group.interest_border.territory.description, groups_url(:interest_border => group.interest_border.as_json[:id]) %>
        <div class="territory_fade"></div>
      </div>
    </div>
    <div style="clear: both"></div>

  </div>

