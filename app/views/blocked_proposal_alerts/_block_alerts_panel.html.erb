<% if @blocked_alerts %>
    <%= link_to t('pages.proposals.show.enable_alerts'), unlock_proposal_blocked_proposal_alerts_path(@proposal), method: :post, remote: true, class: 'btn', disable_with: t('loading') %>
<% else %>
    <%= link_to t('pages.proposals.show.disable_alerts'), block_proposal_blocked_proposal_alerts_path(@proposal), method: :post, remote: true, class: 'btn', disable_with: t('loading') %>
<% end %>