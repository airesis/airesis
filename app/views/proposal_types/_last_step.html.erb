  <% if @change_advanced_options %>

      <%= f.label :anonima do %>
          <%= f.check_box :anonima %>
          <%= t('activerecord.attributes.proposal.anonima') %>
      <% end %>

      <%= f.label :visible_outside do %>
          <%= f.check_box :visible_outside %>
          <%= t('activerecord.attributes.proposal.visible_outside') %>
