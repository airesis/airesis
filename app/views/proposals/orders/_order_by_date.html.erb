<% if (!params[:view] || (params[:view] == SearchProposal::ORDER_BY_DATE)) %>
    <span class="order_option sel">
        <%= link_to t('pages.proposals.tabs.last_inserted'), current_url(view: SearchProposal::ORDER_BY_DATE, replace: true, replace_id: @replace_id, order: (params[:order] == 'a') ? nil : 'a'), title: "Ordina le proposte per data di aggiornamento", remote: true, data: {disable_with: t('loading')} %>
        <span class="<%=(params[:order] == 'a') ? 'icon-arrow-up3' : 'icon-arrow-down3'%>"></span>
    </span>
<% else %>
    <span class="order_option">
	    <%= link_to t('pages.proposals.tabs.last_inserted'), current_url(view: SearchProposal::ORDER_BY_DATE, replace: true, replace_id: @replace_id), title: "Ordina le proposte per data di aggiornamento", remote: true, data: {disable_with: t('loading')} %>
    </span>
<% end %>