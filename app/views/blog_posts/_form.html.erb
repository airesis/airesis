   	end 
   data += "]"	
   %>

<script type="text/javascript">
	$(function() {
		input = $('#blog_post_tags_list')
		if (input != null) {
			input.tokenInput("<%=tags_path(format: :json )%>", {
                theme: "facebook",
                crossDomain: false,
                allowFreeTagging: true,
                minChars: 3,
                hintText: "<%=t('digit_tags')%>",
                searchingText: "<%=t('digit_tags')%>",
                preventDuplicates: true,
                allowTabOut: true,
                tokenValue: "name"
			})
		}
	});
</script>  		
	
