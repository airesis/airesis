function hideDisableButton(button) {
	button.hide();
	var toAdd = $('<div class="waitDiv"><%=image_tag "facebook-loader.gif", :alt => "loading..."%> </div>');
	toAdd.width(button.outerWidth(true));
	toAdd.height(button.outerHeight(true));
